{
  "$schema": "https://biomejs.dev/schemas/2.1.0/schema.json",
  "root": false,
  "extends": "//",
  "files": {
    "includes": [
      "src/**/*.ts",
      "test/**/*.ts",
      "libs/**/*.ts",
      "test/**/*.ts",
      "!src/clients/**/*.ts"
    ]
  },
  "linter": {
    "rules": {
      "style": {
        "useImportType": "off"
      },
      "correctness": {
        "useHookAtTopLevel": "off"
      }
    }
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "formatter": {
    "includes": ["src/**/*.ts", "test/**/*.ts"]
  }
}
