{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "root": false,
  "extends": "//",
  "files": {
    "includes": [
      "src/**/*.ts",
      "test/**/*.ts",
      "libs/**/*.ts",
      "test/**/*.ts"
    ]
  },
  "linter": {
    "rules": {
      "style": {
        "useImportType": "off"
      },
      "correctness": {
        "useHookAtTopLevel": "off"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "formatter": {
    "includes": [
      "src/**/*.ts",
      "test/**/*.ts"
    ]
  }
}